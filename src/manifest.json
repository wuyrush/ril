{
  "manifest_version": 2,
  "version": "1.0",
  "name": "ril",
  "description": "Save tabs you want to read later.",
  "background": {
    "scripts": ["js/common.js", "js/browser-polyfill.js", "js/background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/page-16.png",
      "32": "icons/page-32.png"
    }
  },
  "permissions": ["tabs", "storage"],
  "commands": {
    "ril-save-tab": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "MacCtrl+Y"
      },
      "description": "Save the current tab"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
      },
      "description": "Toggle popup and display saved tabs"
    }
  }
}
